{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.2"
    }
  },
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(index|login|signup|game_room|room|arena|logout|create_room|join_lobby|join_room_action|send_message|get_messages|get_room_status|get_arena_players|start_game_action)",
      "dest": "/api/$1.php"
    },
    {
      "src": "/(.*).php",
      "dest": "/api/$1.php"
    },
    {
      "src": "/",
      "dest": "/api/index.php"
    }
  ]
}
