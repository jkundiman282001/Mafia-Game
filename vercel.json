{
  "builds": [
    {
      "src": "*.php",
      "use": "vercel-php@0.6.0"
    },
    {
      "src": "assets/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*).php",
      "dest": "/$1.php"
    },
    {
      "src": "/(.*)",
      "dest": "/index.php"
    }
  ]
}
