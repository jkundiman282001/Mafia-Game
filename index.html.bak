<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MAFIA GAME - Social Deduction Thriller</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Rajdhani:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --red: #ff0040;
            --red-dark: #cc0033;
            --red-light: #ff3366;
            --black: #000000;
            --black-dark: #0a0a0a;
            --black-light: #1a1a1a;
            --white: #ffffff;
            --white-dark: #cccccc;
            --card-bg: rgba(26, 26, 26, 0.9);
        }

        body {
            font-family: 'Rajdhani', sans-serif;
            background: var(--black);
            color: var(--white);
            line-height: 1.6;
            overflow-x: hidden;
            position: relative;
        }

        /* Animated Background */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 20% 50%, rgba(255, 0, 64, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(255, 0, 64, 0.08) 0%, transparent 50%),
                radial-gradient(circle at 40% 20%, rgba(255, 0, 64, 0.05) 0%, transparent 50%);
            animation: backgroundShift 20s ease-in-out infinite;
            z-index: -1;
        }

        @keyframes backgroundShift {
            0%, 100% { opacity: 1; transform: scale(1); }
            50% { opacity: 0.8; transform: scale(1.1); }
        }

        /* Grid Pattern Overlay */
        body::after {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: 
                linear-gradient(rgba(255, 0, 64, 0.05) 1px, transparent 1px),
                linear-gradient(90deg, rgba(255, 0, 64, 0.05) 1px, transparent 1px);
            background-size: 50px 50px;
            z-index: -1;
            pointer-events: none;
        }

        .container {
            max-width: 1600px;
            margin: 0 auto;
            padding: 0 40px;
        }

        /* Header */
        header {
            background: rgba(0, 0, 0, 0.9);
            padding: 1.5rem 0;
            position: sticky;
            top: 0;
            z-index: 1000;
            backdrop-filter: blur(20px);
            border-bottom: 2px solid var(--red);
            box-shadow: 0 4px 30px rgba(255, 0, 64, 0.3);
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            font-family: 'Orbitron', sans-serif;
            font-size: 2rem;
            font-weight: 900;
            color: var(--red);
            text-transform: uppercase;
            letter-spacing: 3px;
            text-shadow: 0 0 30px var(--red);
            animation: logoGlow 2s ease-in-out infinite alternate;
        }

        @keyframes logoGlow {
            from { filter: drop-shadow(0 0 10px var(--red)); }
            to { filter: drop-shadow(0 0 20px var(--red)); }
        }

        .nav-links {
            display: flex;
            gap: 3rem;
            list-style: none;
        }

        .nav-links a {
            color: var(--white);
            text-decoration: none;
            font-weight: 600;
            font-size: 1.1rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            position: relative;
            padding: 0.5rem 0;
            transition: all 0.3s;
        }

        .nav-links a::before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 2px;
            background: var(--red);
            transition: width 0.3s;
        }

        .nav-links a:hover::before {
            width: 100%;
        }

        .nav-links a:hover {
            color: var(--red);
            text-shadow: 0 0 10px var(--red);
        }

        /* Hero Section */
        .hero {
            text-align: center;
            padding: 8rem 0 6rem;
            position: relative;
            min-height: 90vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .hero-content {
            position: relative;
            z-index: 1;
        }

        .hero h1 {
            font-family: 'Orbitron', sans-serif;
            font-size: 5rem;
            font-weight: 900;
            margin-bottom: 1.5rem;
            text-transform: uppercase;
            letter-spacing: 5px;
            color: var(--white);
            animation: fadeInUp 1s ease-out;
            text-shadow: 0 0 40px var(--red), 0 0 80px var(--red);
        }

        .hero .subtitle {
            font-size: 1.8rem;
            margin-bottom: 1rem;
            color: var(--red);
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 3px;
            animation: fadeInUp 1s ease-out 0.2s both;
            text-shadow: 0 0 20px var(--red);
        }

        .hero p {
            font-size: 1.4rem;
            margin-bottom: 3rem;
            color: var(--white-dark);
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
            animation: fadeInUp 1s ease-out 0.4s both;
        }

        .cta-button {
            display: inline-block;
            padding: 1.2rem 4rem;
            background: transparent;
            color: var(--red);
            text-decoration: none;
            font-size: 1.3rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 2px;
            border: 3px solid var(--red);
            position: relative;
            overflow: hidden;
            transition: all 0.3s;
            box-shadow: 
                0 0 20px rgba(255, 0, 64, 0.3),
                inset 0 0 20px rgba(255, 0, 64, 0.1);
            animation: fadeInUp 1s ease-out 0.6s both;
        }

        .cta-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 0, 64, 0.3), transparent);
            transition: left 0.5s;
        }

        .cta-button:hover::before {
            left: 100%;
        }

        .cta-button:hover {
            transform: translateY(-5px);
            background: var(--red);
            color: var(--black);
            box-shadow: 
                0 0 40px rgba(255, 0, 64, 0.6),
                inset 0 0 30px rgba(0, 0, 0, 0.2);
            border-color: var(--red);
            text-shadow: none;
        }

        /* Roles Section */
        .roles-section {
            padding: 6rem 0;
            position: relative;
        }

        .section-title {
            text-align: center;
            font-family: 'Orbitron', sans-serif;
            font-size: 3.5rem;
            font-weight: 900;
            margin-bottom: 4rem;
            text-transform: uppercase;
            letter-spacing: 4px;
            color: var(--white);
            text-shadow: 0 0 30px var(--red);
            position: relative;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -20px;
            left: 50%;
            transform: translateX(-50%);
            width: 200px;
            height: 4px;
            background: var(--red);
            box-shadow: 0 0 10px var(--red);
        }

        .roles-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 3rem;
            margin-top: 4rem;
        }

        .role-card {
            background: var(--black-light);
            border-radius: 20px;
            padding: 2.5rem 2rem;
            text-align: center;
            position: relative;
            border: 2px solid rgba(255, 0, 64, 0.2);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            overflow: hidden;
            box-sizing: border-box;
            width: 100%;
        }

        .role-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: 
                linear-gradient(rgba(255, 0, 64, 0.05) 1px, transparent 1px),
                linear-gradient(90deg, rgba(255, 0, 64, 0.05) 1px, transparent 1px);
            background-size: 30px 30px;
            opacity: 0.5;
            z-index: 0;
            pointer-events: none;
        }

        .role-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 60px rgba(255, 0, 64, 0.4);
            border-color: var(--red);
        }

        .role-card > * {
            position: relative;
            z-index: 1;
        }

        .role-icon {
            font-size: 4.5rem;
            margin-bottom: 1.5rem;
            filter: drop-shadow(0 0 30px var(--red)) drop-shadow(0 0 60px var(--red));
            animation: iconFloat 3s ease-in-out infinite;
            color: var(--white);
        }

        @keyframes iconFloat {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        .role-card h3 {
            font-family: 'Orbitron', sans-serif;
            font-size: 1.75rem;
            margin-bottom: 1.5rem;
            color: var(--red);
            text-transform: uppercase;
            letter-spacing: 1.5px;
            font-weight: 900;
            text-shadow: 0 0 20px var(--red), 0 0 40px var(--red);
            word-spacing: 0;
            padding: 0 0.25rem;
            overflow-wrap: normal;
            line-height: 1.2;
        }

        .role-card p {
            color: var(--white);
            line-height: 1.8;
            font-size: 1.1rem;
            margin-bottom: 1.5rem;
        }

        .role-badge {
            display: inline-block;
            margin-top: 1rem;
            padding: 0.8rem 2rem;
            background: var(--red-dark);
            border: 2px solid var(--red);
            border-radius: 25px;
            font-size: 0.9rem;
            font-weight: 700;
            color: var(--white);
            text-transform: uppercase;
            letter-spacing: 2px;
            box-shadow: 0 0 15px rgba(255, 0, 64, 0.5);
        }

        /* How to Play Section */
        .how-to-play {
            padding: 6rem 0;
            background: rgba(0, 0, 0, 0.3);
            position: relative;
        }

        .steps {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 3rem;
            margin-top: 4rem;
        }

        .step {
            text-align: center;
            padding: 2rem;
            background: var(--card-bg);
            border-radius: 15px;
            border: 2px solid rgba(255, 0, 64, 0.3);
            transition: all 0.3s;
            position: relative;
        }

        .step:hover {
            border-color: var(--red);
            box-shadow: 0 10px 30px rgba(255, 0, 64, 0.4);
            transform: translateY(-5px);
        }

        .step-number {
            display: inline-block;
            width: 70px;
            height: 70px;
            background: var(--red);
            color: var(--black);
            border-radius: 50%;
            line-height: 70px;
            font-size: 2rem;
            font-weight: 900;
            margin-bottom: 1.5rem;
            font-family: 'Orbitron', sans-serif;
            box-shadow: 0 0 30px var(--red);
            position: relative;
        }

        .step-number::after {
            content: '';
            position: absolute;
            inset: -3px;
            border-radius: 50%;
            background: var(--red);
            z-index: -1;
            opacity: 0;
            transition: opacity 0.3s;
            box-shadow: 0 0 20px var(--red);
        }

        .step:hover .step-number::after {
            opacity: 0.5;
        }

        .step h4 {
            margin-bottom: 1rem;
            color: var(--red);
            font-family: 'Orbitron', sans-serif;
            font-size: 1.5rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            text-shadow: 0 0 10px var(--red);
        }

        .step p {
            color: var(--white-dark);
            font-size: 1.1rem;
        }

        /* Footer */
        footer {
            text-align: center;
            padding: 3rem 0;
            background: var(--black);
            border-top: 2px solid var(--red);
            color: var(--white-dark);
        }

        /* Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(40px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Particle Effect */
        .particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 0;
        }

        .particle {
            position: absolute;
            width: 2px;
            height: 2px;
            background: var(--red);
            border-radius: 50%;
            box-shadow: 0 0 10px var(--red);
            animation: float 15s infinite;
        }

        @keyframes float {
            0% {
                transform: translateY(100vh) translateX(0);
                opacity: 0;
            }
            10% {
                opacity: 1;
            }
            90% {
                opacity: 1;
            }
            100% {
                transform: translateY(-100vh) translateX(100px);
                opacity: 0;
            }
        }

        /* Responsive */
        @media (max-width: 768px) {
            .hero h1 {
                font-size: 3rem;
            }

            .hero .subtitle {
                font-size: 1.3rem;
            }

            .nav-links {
                gap: 1.5rem;
                font-size: 0.9rem;
            }

            .logo {
                font-size: 1.5rem;
            }

            .roles-grid {
                grid-template-columns: 1fr;
            }

            .section-title {
                font-size: 2.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="particles" id="particles"></div>

    <header>
        <nav class="container">
            <div class="logo">MAFIA</div>
            <ul class="nav-links">
                <li><a href="#home">Home</a></li>
                <li><a href="#roles">Roles</a></li>
                <li><a href="#how-to-play">How to Play</a></li>
            </ul>
        </nav>
    </header>

    <section class="hero" id="home">
        <div class="container">
            <div class="hero-content">
                <div class="subtitle">Social Deduction</div>
                <h1>MAFIA GAME</h1>
                <p>Trust no one. Deceive everyone. Survive the night. Can you identify the killer before it's too late?</p>
                <a href="#play" class="cta-button">Enter Game</a>
            </div>
        </div>
    </section>

    <section class="roles-section" id="roles">
        <div class="container">
            <h2 class="section-title">Choose Your Role</h2>
            <div class="roles-grid">
                <div class="role-card">
                    <div class="role-icon">üë•</div>
                    <h3>Townsfolk</h3>
                    <p>You are an innocent citizen. Work together with other townspeople to identify and eliminate the killer through discussion and voting.</p>
                    <span class="role-badge">Innocent</span>
                </div>
                <div class="role-card">
                    <div class="role-icon">üî™</div>
                    <h3>Killer</h3>
                    <p>You are the mastermind. Eliminate players each night, blend in during the day, and deceive the town to achieve victory.</p>
                    <span class="role-badge">Evil</span>
                </div>
                <div class="role-card">
                    <div class="role-icon">üîç</div>
                    <h3>Detective</h3>
                    <p>Investigate one player each night to discover their true identity. Use your findings to guide the town to victory.</p>
                    <span class="role-badge">Special</span>
                </div>
                <div class="role-card">
                    <div class="role-icon">üíâ</div>
                    <h3>Doctor</h3>
                    <p>Protect one player each night from the killer's attack. Your healing powers are crucial for the town's survival.</p>
                    <span class="role-badge">Protector</span>
                </div>
            </div>
        </div>
    </section>

    <section class="how-to-play" id="how-to-play">
        <div class="container">
            <h2 class="section-title">How to Play</h2>
            <div class="steps">
                <div class="step">
                    <div class="step-number">1</div>
                    <h4>Join Game</h4>
                    <p>Create or join a game room with your friends</p>
                </div>
                <div class="step">
                    <div class="step-number">2</div>
                    <h4>Get Role</h4>
                    <p>Receive your secret role assignment privately</p>
                </div>
                <div class="step">
                    <div class="step-number">3</div>
                    <h4>Day Phase</h4>
                    <p>Discuss and vote to eliminate suspicious players</p>
                </div>
                <div class="step">
                    <div class="step-number">4</div>
                    <h4>Night Phase</h4>
                    <p>Special roles perform their actions in secret</p>
                </div>
                <div class="step">
                    <div class="step-number">5</div>
                    <h4>Victory</h4>
                    <p>Eliminate all threats or be eliminated yourself!</p>
                </div>
            </div>
        </div>
    </section>

    <footer>
        <div class="container">
            <p>&copy; 2024 MAFIA GAME. All rights reserved.</p>
        </div>
    </footer>

    <script>
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Dynamic header effect
        window.addEventListener('scroll', () => {
            const header = document.querySelector('header');
            if (window.scrollY > 100) {
                header.style.background = 'rgba(0, 0, 0, 0.95)';
                header.style.boxShadow = '0 4px 30px rgba(255, 0, 64, 0.4)';
            } else {
                header.style.background = 'rgba(0, 0, 0, 0.9)';
                header.style.boxShadow = '0 4px 30px rgba(255, 0, 64, 0.3)';
            }
        });

        // Create floating particles
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const colors = ['#ff0040', '#ff3366', '#cc0033'];
            
            for (let i = 0; i < 50; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.background = colors[Math.floor(Math.random() * colors.length)];
                particle.style.animationDelay = Math.random() * 15 + 's';
                particle.style.animationDuration = (Math.random() * 10 + 10) + 's';
                particlesContainer.appendChild(particle);
            }
        }

        createParticles();

        // Add parallax effect to hero
        window.addEventListener('scroll', () => {
            const scrolled = window.pageYOffset;
            const hero = document.querySelector('.hero');
            if (hero) {
                hero.style.transform = `translateY(${scrolled * 0.3}px)`;
                hero.style.opacity = 1 - scrolled / 500;
            }
        });
    </script>
</body>
</html>